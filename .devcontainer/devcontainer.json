{
    "name": "Nexus OS - Agentic AI Suite",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11"
        },
        "ghcr.io/devcontainers/features/node:1": {
            "version": "18"
        }
    },
    "forwardPorts": [
        3000,
        5173,
        5174,
        5175,
        8000,
        8001,
        8005,
        8006,
        8501,
        8502,
        8503,
        8504,
        8505,
        8506
    ],
    "portsAttributes": {
        "3000": {
            "label": "Unified Portal",
            "onAutoForward": "notify"
        },
        "5173": {
            "label": "Text-to-SQL UI",
            "onAutoForward": "silent"
        },
        "5174": {
            "label": "RAG UI",
            "onAutoForward": "silent"
        },
        "5175": {
            "label": "KYC Dashboard",
            "onAutoForward": "silent"
        },
        "8501": {
            "label": "Claims Adjuster",
            "onAutoForward": "silent"
        },
        "8502": {
            "label": "Fraud Investigator",
            "onAutoForward": "silent"
        },
        "8503": {
            "label": "Underwriting Agent",
            "onAutoForward": "silent"
        },
        "8504": {
            "label": "Compliance Bot",
            "onAutoForward": "silent"
        },
        "8505": {
            "label": "API Transformer",
            "onAutoForward": "silent"
        },
        "8506": {
            "label": "Lifecycle Manager",
            "onAutoForward": "silent"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint",
                "tamasfe.even-better-toml"
            ]
        }
    },
    "postCreateCommand": "bash .devcontainer/setup.sh"
}