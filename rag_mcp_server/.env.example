# --- Embedding Configuration ---
# Options: openai, ollama, sentence_transformer, local_mock
EMBEDDING_PROVIDER=sentence_transformer
# Models: text-embedding-3-small (OpenAI), all-MiniLM-L6-v2 (SentenceTransformer), nomic-embed-text (Ollama)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# --- LLM Configuration ---
# Options: openai, ollama
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo-preview
# LLM_MODEL=llama3 (if using Ollama)

# --- Vector Database ---
# Options: memory, faiss, chroma, qdrant, postgres
VECTOR_STORE_TYPE=faiss

# --- API Keys & URLs ---
OPENAI_API_KEY=sk-proj-...
OLLAMA_BASE_URL=http://localhost:11434/v1

# --- Tuning ---
MIN_SCORE_THRESHOLD=0.4
MAX_CONTEXT_TOKENS=4000
